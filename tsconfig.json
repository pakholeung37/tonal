{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "strict": true,
    "module": "nodenext",
    "noImplicitAny": true,
    "outDir": "./dist",
    "target": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/dist/**/*"]
}
