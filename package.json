{
  "name": "@pakholeung37/tonal",
  "main": "src/index.ts",
  "clean-package": {
    "replace": {
      "main": "dist/index.js",
      "module": "dist/index.mjs",
      "types": "dist/index.d.ts"
    }
  },
  "scripts": {
    "publish-packages": "pnpm run test:all && changeset version && changeset publish",
    "build": "tsup src/index.ts --sourcemap --dts --format esm,cjs",
    "dev": "vite",
    "format": "prettier --write .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint '**/*.ts'",
    "lint:fix": "eslint '**/*.ts' --fix",
    "test:all": "pnpm run format && pnpm run lint && pnpm run build && pnpm run test:run"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "prettier": {},
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "ignorePatterns": [
      "packages/**/dist/*"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.11",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.25.0",
    "eslint": "^9.29.0",
    "lodash": "^4.17.21",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  }
}
